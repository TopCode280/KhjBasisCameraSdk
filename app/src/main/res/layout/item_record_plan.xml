<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_item_height_small"
    android:paddingEnd="@dimen/padding_start"
    android:background="@drawable/selector_item_white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/padding_start"
        android:gravity="center_vertical"
        android:text="@string/recordingTime"
        android:textSize="@dimen/textsize_small" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/padding_start"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:paddingEnd="@dimen/padding_start_small"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/textsize_small" />


</LinearLayout>